<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://www.springframework.org/schema/webflow"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="order" class="flow.domain.Order"/>

    <subflow-state id="identifyCustomer" subflow="ordering/order/orderSubFlows">
        <output name="customer" value="order.customer"/>
        <transition on="customerReady" to="buildOrder"/>
    </subflow-state>

    <!--<subflow-state id="build" subflow="ordering/order/orderSubFlows">-->
    <!--<input name="order" value="order"/>-->
    <!--<transition on="orderReady" to="buildOrder"/>-->
    <!--</subflow-state>-->

    <end-state id="buildOrder"/>

    
</flow>