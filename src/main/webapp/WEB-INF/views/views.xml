<tiles-definitions>

    <!-- Default Main Template -->
    <definition name=".mainTemplate" template="/WEB-INF/views/mainTemplate.jsp">
        <put-attribute name="header" value="EXES Spring Module 3 Tasks" type="string"/>
        <put-attribute name="menu" value="/WEB-INF/views/menu.jsp"/>
        <put-attribute name="body" value="/WEB-INF/views/blank.jsp"/>
        <put-attribute name="footer" value="Footer" type="string"/>
    </definition>

    <definition name="homeTile" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/home.jsp"/>
    </definition>

    <definition name="newEntityTile" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/newEntity.jsp"/>
    </definition>

    <definition name="listEntitiesTile" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/listEntities.jsp"/>
    </definition>

    <definition name="welcome" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/flow/welcome.jsp"/>
    </definition>

    <definition name="newCustomer" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/views/flow/newCustomer.jsp"/>
    </definition>

</tiles-definitions>